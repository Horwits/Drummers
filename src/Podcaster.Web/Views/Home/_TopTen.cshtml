@model Podcaster.Web.Models.TopTenPodcastsViewModel

@{
    ViewBag.Title = "_TopTen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Top 10</h2>

<div class="col-lg-12 text-center">
@foreach (var item in Model.TopTen) {
    <ul>
        <li>
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="PodcastImage" />
        </li>
        <li>
            @Html.DisplayFor(modelItem => item.Title)
        </li>
        <li>
            @Html.DisplayFor(modelItem => item.Author)
        </li>
        <li>
            @Html.DisplayFor(modelItem => item.LastUpdated)
        </li>
        <li>
            @Html.DisplayFor(modelItem => item.IsExplicit)
        </li>
        <li>
            @Html.DisplayFor(modelItem => item.Pricing)
        </li>
        <li>
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
        </li>
    </ul>
}

</div>
