@{
    ViewBag.Title = "Home Page";
}

<div id="content-row" class="row">
    <div class="col-md-6">
        <h1 id="hm-big-heading" class="dark-blue">Podcaster</h1>
        <p class="hm-big-text">
            is
            <br />
            an easy and powerful way
            <br />
            to manage your favorite podcasts.
            <br />
            Everything you need.
            <br />
            No
            technology to learn.
        </p>
    </div>
    <div class="col-md-6 text-center">
        <div id="accordion" class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Register</a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse">
                    <div class="panel-body">

                        @Html.Partial("_UserRegisterPartial")
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Login</a>
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse in">

                    <div class="panel-body">

                        <p class="text-center">
                            @Html.Partial("_UserLoginPartial")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}